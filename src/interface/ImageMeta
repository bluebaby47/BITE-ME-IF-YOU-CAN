import { IconifyIcon } from "@iconify/react"

/**
 * Represents ImageMeta with cover, badge and icon.
 * 
 * @interface ImageMeta
 * 
 * @property {string} cover - The display cover image.
 * @property {string} badge - Image used as badge.
 * @property {string | IconifyIcon } - Icon representing the recipe.
 * 
 * @example
 * const imageMeta: ImageMeta = {
 *      cover: "https://cover-image-example.png"
 *      badge: "https://badge-image-example.png"
 *      icon: "game-icons:steak",
 * }
 */
export interface ImageMeta {
    cover: string;
    badge: string;
    icon: IconifyIcon | string;
}